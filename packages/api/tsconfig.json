{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "exactOptionalPropertyTypes": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@surfside/lib": ["../lib/src/index.ts"],
      "@surfside/lib/*": ["../lib/src/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
