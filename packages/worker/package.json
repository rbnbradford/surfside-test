{
  "name": "@surfside/worker",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "docker:dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register --poll --ignore-watch node_modules src/index.ts",
    "build": "tsc --build tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "start": "node --env-file=./env/.env dist/index.js",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --fix",
    "format": "biome format --write .",
    "check": "biome check .",
    "check:fix": "biome check . --fix",
    "test": "vitest",
    "test:integration": "vitest run --config vitest.config.integration.ts",
    "tsc:check": "tsc --noEmit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@surfside/lib": "*",
    "@clickhouse/client": "^1.16.0",
    "@fastify/cors": "^11.2.0",
    "express": "^5.2.1",
    "fastify": "^5.7.1",
    "fastify-type-provider-zod": "^6.1.0",
    "kafkajs": "^2.2.4",
    "pm2": "^6.0.14",
    "uuid": "^13.0.0",
    "zod": "^4.3.5",
    "ioredis": "^5.9.2"
  },
  "devDependencies": {
    "tsx": "^4.21.0",
    "@biomejs/biome": "^2.3.11",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.8",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.17"
  }
}
